    </licenses>

    <developers>
        <developer>
            <id>andmccall</id>
            <name>Andrew McCall</name>
            <url>https://imagej.net/User:Amccall</url>
        </developer>
    </developers>
    <contributors>
        <contributor>
            <name>None</name>
        </contributor>
