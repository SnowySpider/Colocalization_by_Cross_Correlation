    <issueManagement>
        <system>GitHub Issues</system>
        <url>http://github.com/andmccall/Colocalization_by_Cross_Correlation/issues</url>
    </issueManagement>
    <ciManagement>
        <system>None</system>
    </ciManagement>

    <properties>
        <main-class>ColocByCorrelate</main-class>
        <license.licenseName>cc0</license.licenseName>
        <license.copyrightOwners>N/A</license.copyrightOwners>
